{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.tasi.livesupertool",
  "productName": "TASI-live-Supertool",
  "asar": true,
  "asarUnpack": [
    "node_modules/better-sqlite3/**",
    "node_modules/playwright/**",
    "node_modules/playwright-extra/**",
    "node_modules/playwright-extra-plugin-stealth/**",
    "node_modules/puppeteer-extra-plugin-stealth/**"
  ],
  "directories": {
    "app": ".",
    "output": "release/${version}"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "dist-electron/main/runtime/**",
    "electron/platformConfig.js",
    "package.json",
    "!**/*.map",
    "!**/test/**",
    "!**/tests/**",
    "!**/docs/**",
    "!**/.cache/**",
    "!**/playwright/.cache/**"
  ],
  "afterPack": "scripts/electron-after-pack.js",

  "extraMetadata": {
    "main": "dist-electron/main/index.js"
  },
  "electronLanguages": ["zh-CN", "en-US"],
  "mac": {
    "artifactName": "TASI-live-Supertool_${version}_macos_${arch}.${ext}",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/favicon.png"
  },
  "win": {
    "target": [{ "target": "nsis", "arch": ["x64"] }, { "target": "zip", "arch": ["x64"] }],
    "icon": "public/favicon.ico",
    "artifactName": "TASI-live-Supertool_V1.0_win-x64.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "differentialPackage": true
  }
}
